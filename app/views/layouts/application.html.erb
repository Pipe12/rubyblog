<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <%= link_to 'SuperBlog', root_path, class: 'navbar-brand' %>
        <ul class="navbar-nav navbar-expand">
          <li class="nav-item"><%= link_to 'Nuevo post', new_post_path, class: 'nav-link ml-3' %>
          <li class="nav-item"><%= link_to 'Salir', '#', class: 'nav-link ml-3' %>
          <li class="nav-item"><%= link_to 'Ingresar', '#', class: 'nav-link ml-3' %>
          <li class="nav-item"><%= link_to 'Registrase', '#', class: 'nav-link ml-3' %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
